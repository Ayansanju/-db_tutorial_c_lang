"+        continue;\n"
"       case (PREPARE_UNRECOGNIZED_STATEMENT):\n"
"         printf(\"Unrecognized keyword at start of '%s'.\n"
"\",\n"
"                input_buffer->buffer);\n"
"         continue;\n"
"     }"
msgstr ""

msgid ""
"-    execute_statement(&statement);\n"
"-    printf(\"Executed.\n"
"\");\n"
"+    switch (execute_statement(&statement, table)) {\n"
"+      case (EXECUTE_SUCCESS):\n"
"+        printf(\"Executed.\n"
